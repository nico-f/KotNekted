{% extends 'kotpresenceBundle::menu.html.twig' %}
{% block taskpage %} active {% endblock %}
{% block title %} <Tâches></Tâches> {% endblock %}
{% block body -%}
    <h1 class="text-center">Liste de tâches</h1>

    <table class="table-bordered table-responsive container-fluid" style="max-width: 1000px ">
        <thead>
            <tr>
                <th>Nom</th>
                {% if is_granted('ROLE_USER') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                {% if is_granted('ROLE_USER') %}
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            <a href="{{ path('list_show', { 'id': entity.id }) }}"><button type="button" class="btn btn-default"><span class="fa fa-eye"></span></button></a>
                            <a href="{{ path('list_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-default"><span class="fa fa-pencil"></span></button></a>
                        </div>
                    </td>

                {% endif %}
            </tr>
        {% endfor %}
        {% if is_granted('ROLE_USER') %}
            <tr>
                <td ></td>
                <td>
                    <a href="{{ path('list_new') }}">
                        <button type="button" class="btn btn-default" style="color: green">Ajouter</button>
                    </a>
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    {% endblock %}
