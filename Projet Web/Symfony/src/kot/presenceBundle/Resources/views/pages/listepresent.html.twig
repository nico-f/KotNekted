{% extends "kotpresenceBundle::menu.html.twig" %}
        {% block head %}
            {{ parent() }}

         {#  <META HTTP-EQUIV="Refresh" CONTENT="10">#}
        {% endblock %}
        {% block title %}
            Présences
        {% endblock %}
        {% block whopage %} class="active" {% endblock %}
        {% block body %}
            {% if is_granted('ROLE_USER') %}
            {{ render(controller(
            'kotpresenceBundle:announce:new_announce'))}}
        {% endif %}

            <h1 class="text-center jumbotron" >Présences  <img style="display: inline-block" class="container-fluid img-responsive center-block" src="{{ qrcode_url('WIFI:T:WPA;S:aze;P:azeazeaze;;') }}" /></h1>
            <div class="row">
                {% set total= 0 %}


                {% for  user in 0..users|length-1 %}
                    {%  if user > 0 %}
                        {% if users[user-1].id == users[user].id %}
                            <span class="
                                {% if users[user].deviceid == 1 %}
                                    fa fa-desktop
                                {% elseif users[user].deviceid == 2 %}
                                    fa fa-tablet
                                {% elseif users[user].deviceid == 3 %}
                                    fa fa-mobile
                                {% elseif users[user].deviceid == 4 %}
                                    fa fa-stopwatch
                                {% endif %}
                            "></span>
                        {% else %}
                            </h2>
                            </div>
                            {% include "kotpresenceBundle:pages:someone.html.twig" %}
                        {% endif %}
                    {% else %}
                        {% include "kotpresenceBundle:pages:someone.html.twig" %}
                    {% endif %}
                {% endfor %}
                </h2>
                </div>
                <div class="col-lg-2 col-md-4 col-xs-6">
                    <img src="{{ asset('img/invite.jpg') }}" style="height: 200px" class="img-responsive center-block">
                    <h2 class="text-center" >  {{ length-users|length }} invité(s) connecté(s) </h2>
                </div>
            </div>
        {% endblock %}