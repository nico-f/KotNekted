<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_communities"
               android:layout_centerVertical="true" android:layout_centerHorizontal="true"
               android:id="@+id/iconLayout"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView" android:layout_below="@+id/iconLayout" android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:src="@drawable/img_empty_profile"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView2"
            android:src="@drawable/img_edit"
            android:layout_alignBottom="@+id/toggleButton" android:layout_toLeftOf="@+id/toggleButton"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="3dp" android:layout_alignParentEnd="false"
            android:layout_below="@+id/imageView" android:background="#f8f7ff" android:id="@+id/linearLayout4">
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="3dp"
                  android:background="#f8f7ff" android:id="@+id/linearLayout"
                  android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="3dp"
                  android:layout_alignParentEnd="false"
                  android:background="#f8f7ff" android:id="@+id/linearLayout2" android:layout_alignParentStart="false"
                  android:layout_alignParentBottom="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="3dp"
                  android:layout_alignParentEnd="false"
                  android:background="#f8f7ff" android:id="@+id/linearLayout3" android:layout_below="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/toggleButton" android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NomKot"
            android:id="@+id/textView2"
            android:textColor="#5f92fe"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Surnom"
            android:id="@+id/textView3"
            android:layout_below="@+id/iconLayout" android:layout_toLeftOf="@+id/imageView"
            android:textColor="#b2fe51"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="- du kot - "
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/textView2" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Prénom"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="N° Téléphone"
            android:id="@+id/textView6" android:layout_below="@+id/textView5" android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"/>
    <ImageView android:layout_width="35dp" android:layout_height="35dp" android:id="@+id/imageView3"
               android:src="@drawable/img_info"
               android:layout_alignTop="@+id/toggleButton" android:layout_alignLeft="@+id/imageView2"
               android:layout_alignStart="@+id/imageView2"/>
    <ToggleButton
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:checked="true" android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="******"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6" android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Actual IP"
            android:id="@+id/textView8"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/linearLayout" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Actual MAC"
            android:id="@+id/textView9"
            android:layout_alignTop="@+id/textView8" android:layout_toRightOf="@+id/textView6"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/textView10"
            android:layout_marginTop="49dp" android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="sans" android:singleLine="false" android:layout_below="@+id/textView8"
            android:layout_alignRight="@+id/toggleButton" android:layout_alignEnd="@+id/toggleButton"
            android:layout_toRightOf="@+id/textView"/>
    <TextView android:layout_width="100dp" android:layout_height="wrap_content"
              android:text="Longitude"
              android:id="@+id/textView11"
              android:textAppearance="?android:attr/textAppearanceMedium" android:typeface="sans"
              android:singleLine="false"
              android:layout_alignBottom="@+id/textView13"
              android:layout_alignRight="@+id/textView10" android:layout_alignEnd="@+id/textView10"
              android:layout_toRightOf="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lat :"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/textView10" android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Long:"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView10" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="28dp"/>


</RelativeLayout>