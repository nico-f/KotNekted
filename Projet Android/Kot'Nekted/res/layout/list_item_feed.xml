<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/imageView" android:src="@android:drawable/ic_menu_my_calendar"/>
    <TextView
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DateTime"
            android:id="@+id/textViewDate" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
            android:inputType="datetime"/>
    <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ici la description textuelle de l'envoie"
            android:id="@+id/textViewDesc" android:layout_below="@+id/textViewDate" android:layout_toRightOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"/>
    <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Creator"
            android:id="@+id/textViewCreator" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textViewDate"/>
    <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageButton"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_below="@+id/textViewCreator" android:layout_toRightOf="@+id/textViewCreator"/>
    <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageButton2"
            android:src="@android:drawable/ic_delete" android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
            />
</RelativeLayout>